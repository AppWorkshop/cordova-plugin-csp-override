<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        id="cordova-plugin-csp-override" version="1.0.0">
    <name>Meteor / Cordova override Content Security Policy</name>
    <description>Allows the override of Content Security Policy for iOS and Android</description>
    <license>MIT</license>
    <keywords>cordova,meteor,ios,android,csp</keywords>
    <author>Mike Cunneen - The App Workshop</author>
    <repo>https://github.com/AppWorkshop/cordova-plugin-csp-override.git</repo>
    <engines>
        <engine name="cordova" version=">=5.4.1" />
        <engine name="cordova-ios" version=">=4.0.0" />
        <engine name="apple-ios" version=">=10.0" />
        <engine name="apple-xcode" version=">=7.2" />
    </engines>


    <hook type="before_prepare" src="scripts/beforePrepare.js" />
</plugin>
